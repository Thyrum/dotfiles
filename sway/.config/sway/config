#  /_  __/ /_  __  _________  ______ ___
#   / / / __ \/ / / / ___/ / / / __ `__ \
#  / / / / / / /_/ / /  / /_/ / / / / / /
# /_/ /_/ /_/\__, /_/   \__,_/_/ /_/ /_/
#           /____/
#
# Filename:   .config/sway/config
# Github:     https://github.com/Thyrum/dotfiles
# Maintainer: Thyrum (Aron de Jong)

# First make sure "sudo light" can be executed without a password
# Otherwise you will not be able to change the brightness

# #---Variables---# #
set $mod Mod4
set $term alacritty
set $menu bemenu-run
set $screenshot grim $HOME/Pictures/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png
set $screenclip slurp | grim -g - $HOME/Pictures/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png
set $background $HOME/wallpaper/$(ls $HOME/wallpaper/ | shuf -n 1)

# Lock using swaylock-effects, for normal swaylock, use the second line
set $lock swaylock -f
#set $lock swaylock -f -c 000000

# #---Workspaces---# #
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws0  "10"

# #---window borders---# #
hide_edge_borders smart
default_border pixel 2
default_floating_border normal
mouse_warping none

smart_gaps on
gaps inner 0
gaps outer 0

# When holding $mod, move floating windows with mouse
floating_modifier $mod normal

# #---Window properties---# #
for_window [app_id="Alacritty"]            opacity 0.9
for_window [title="dropdown_*"]            opacity 0.8
for_window [title="dropdown_*"]            floating enable
for_window [title="dropdown_*"]            sticky enable
for_window [title="dropdown_tmuxdd"]       resize set 625 450
for_window [title="dropdown_dropdowncalc"] resize set 800 300
for_window [title="dropdown_tmuxdd"]       border pixel 3
for_window [title="dropdown_*"]            move position center

# #---Autostart---# #
exec kanshi
exec mako
exec firefox

# #---Input configuration---# #
input * {
	xkb_options caps:swapescape
	repeat_delay 300
	repeat_rate 40
}
input "2:14:ETPS/2_Elantech_Touchpad" {
	tap enabled
	natural_scroll enabled
}

# #---Output configuration---# #
output "*" background "$background" fill

# #---Shortcuts---# #
bindsym $mod+Return      exec $term
bindsym $mod+Shift+w     exec firefox
bindsym $mod+Print       exec $screenshot
bindsym $mod+Shift+Print exec $screenclip
bindsym $mod+d           exec $menu

bindsym $mod+Ctrl+u      exec bemenuunicode
bindsym $mod+u           exec $term -e bemenuuni
bindsym $mod+w           exec $term -e nmtui

bindsym $mod+Shift+e     exec prompt 'Are you sure?' 'swaymsg exit'
bindsym $mod+Shift+r     reload
bindsym $mod+b           splith
bindsym $mod+v           splitv
# lock the system
bindsym $mod+p           exec pkill -USR1 swayidle

bindsym $mod+F1          exec switchkeyboard
bindsym $mod+F4          exec mount-drive
bindsym $mod+F5          exec umount-drive
bindsym Pause            exec backlight_toggle

bindsym $mod+q           [con_id="__focused__"] kill
bindsym $mod+Shift+q     [con_id="__focused__"] kill -9

bindsym $mod+f           fullscreen toggle
bindsym $mod+g           fullscreen toggle global
bindsym $mod+Shift+s     sticky toggle

# Dropdown stuff
bindsym $mod+t           exec --no-startup-id ddspawn tmuxdd
bindsym $mod+m           exec --no-startup-id ddspawn cmusdd
bindsym $mod+c           exec --no-startup-id ddspawn bcdd
bindsym XF86Calculator   exec --no-startup-id ddspawn bcdd

# #---Multimedia---# #
bindsym XF86AudioRaiseVolume exec media volume up
bindsym XF86AudioLowerVolume exec media volume down
bindsym XF86AudioMute        exec media volume toggle

bindsym XF86AudioNext    exec media next
bindsym XF86AudioPrev    exec media previous
bindsym XF86AudioPlay    exec media play-pause
bindsym XF86AUdioPause   exec media play-pause

bindsym $mod+F3               exec brightnessctl set +5%
bindsym $mod+F2               exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp   exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

# #---Change focus---# #
bindsym $mod+Left        focus left
bindsym $mod+Down        focus down
bindsym $mod+Up          focus up
bindsym $mod+Right       focus right

bindsym $mod+h           focus left
bindsym $mod+j           focus down
bindsym $mod+k           focus up
bindsym $mod+l           focus right

# #---Move focused window---# #
bindsym $mod+Shift+Left  move left  30
bindsym $mod+Shift+Down  move down  30
bindsym $mod+Shift+Up    move up    30
bindsym $mod+Shift+Right move right 30

bindsym $mod+Shift+h     move left  30
bindsym $mod+Shift+j     move down  30
bindsym $mod+Shift+k     move up    30
bindsym $mod+Shift+l     move right 30

# #---Resize focused window---# #
bindsym $mod+Shift+u     resize shrink width  10 px or 10 ppt
bindsym $mod+Shift+i     resize grow   height 10 px or 10 ppt
bindsym $mod+Shift+o     resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+p     resize grow   width  10 px or 10 ppt

# #--Manage floating windows---# #
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+Shift+b     floating enable; exec hover left
bindsym $mod+Shift+n     floating enable; exec hover right

bindsym $mod+Shift+c     move position center;

# #---Switch to workspace---# #
bindsym $mod+1           workspace $ws1
bindsym $mod+2           workspace $ws2
bindsym $mod+3           workspace $ws3
bindsym $mod+4           workspace $ws4
bindsym $mod+5           workspace $ws5
bindsym $mod+6           workspace $ws6
bindsym $mod+7           workspace $ws7
bindsym $mod+8           workspace $ws8
bindsym $mod+9           workspace $ws9
bindsym $mod+0           workspace $ws10

bindsym XF86Launch5      workspace $ws1
bindsym XF86Launch6      workspace $ws2
bindsym XF86Launch7      workspace $ws3
bindsym XF86Launch8      workspace $ws4
bindsym XF86Launch9      workspace $ws5

# #---Move focused container to workspace---# #
bindsym $mod+Shift+1     move container to workspace $ws1
bindsym $mod+Shift+2     move container to workspace $ws2
bindsym $mod+Shift+3     move container to workspace $ws3
bindsym $mod+Shift+4     move container to workspace $ws4
bindsym $mod+Shift+5     move container to workspace $ws5
bindsym $mod+Shift+6     move container to workspace $ws6
bindsym $mod+Shift+7     move container to workspace $ws7
bindsym $mod+Shift+8     move container to workspace $ws8
bindsym $mod+Shift+9     move container to workspace $ws9
bindsym $mod+Shift+0     move container to workspace $ws0

# #---Move workspace to monitor---# #
bindsym $mod+Ctrl+Left   move workspace to output left
bindsym $mod+Ctrl+Down   move workspace to output down
bindsym $mod+Ctrl+Up     move workspace to output up
bindsym $mod+Ctrl+Right  move workspace to output right

bindsym $mod+Ctrl+h      move workspace to output left
bindsym $mod+Ctrl+j      move workspace to output down
bindsym $mod+Ctrl+k      move workspace to output up
bindsym $mod+Ctrl+l      move workspace to output right

# #---Idle configuration---# #
exec swayidle -w\
	     timeout 300 "$lock" \
	     timeout 600 'if pgrep swaylock; then swaymsg "output * dpms off"; fi' \
	     resume 'swaymsg "output * dpms on"' \
	     before-sleep "$lock"

# #---Status bar---# #
bar {
	font pango:mono, Icons 10
	status_command i3blocks
	position top
	mode dock
	modifier none
}

